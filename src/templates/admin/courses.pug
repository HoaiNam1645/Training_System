include layouts/admin-layout

+adminLayout('Courses Management', 'courses', 'Manage training courses', 'Courses Management')
  div(class="max-w-7xl mx-auto")
    //- Page Header
    div(class="bg-white rounded-lg shadow-lg p-6 mb-6")
      div(class="flex items-center justify-between")
        div
          h2(class="text-2xl font-bold text-gray-900 mb-2") Courses Management
          p(class="text-gray-600") Manage all training courses in the system
        button(class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 flex items-center")
          i(class="fas fa-plus mr-2")
          span Add Course

    //- Stats Cards
    div(class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6")
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-blue-100 text-blue-600")
            i(class="fas fa-graduation-cap text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Total Courses
            p(class="text-2xl font-bold text-gray-900") 12
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-green-100 text-green-600")
            i(class="fas fa-users text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Active Students
            p(class="text-2xl font-bold text-gray-900") 156
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-yellow-100 text-yellow-600")
            i(class="fas fa-clock text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") In Progress
            p(class="text-2xl font-bold text-gray-900") 8

    //- Courses Grid
    div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6")
      //- Course Card 1
      div(class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow")
        img(src="https://images.unsplash.com/photo-1516321318423-f06f85e504b3?w=400&h=200&fit=crop" alt="Course" class="w-full h-48 object-cover")
        div(class="p-6")
          div(class="flex items-center justify-between mb-2")
            h3(class="text-lg font-semibold text-gray-900") JavaScript Fundamentals
            span(class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800") Active
          p(class="text-gray-600 text-sm mb-4") Learn the basics of JavaScript programming language
          div(class="flex items-center justify-between text-sm text-gray-500 mb-4")
            span(class="flex items-center")
              i(class="fas fa-users mr-1")
              span 45 students
            span(class="flex items-center")
              i(class="fas fa-clock mr-1")
              span 8 weeks
          div(class="flex items-center justify-between")
            span(class="text-lg font-bold text-indigo-600") $99
            div(class="flex space-x-2")
              button(class="px-3 py-1 text-indigo-600 hover:text-indigo-900 text-sm") Edit
              button(class="px-3 py-1 text-red-600 hover:text-red-900 text-sm") Delete

      //- Course Card 2
      div(class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow")
        img(src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?w=400&h=200&fit=crop" alt="Course" class="w-full h-48 object-cover")
        div(class="p-6")
          div(class="flex items-center justify-between mb-2")
            h3(class="text-lg font-semibold text-gray-900") React Development
            span(class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800") Active
          p(class="text-gray-600 text-sm mb-4") Master React.js for building modern web applications
          div(class="flex items-center justify-between text-sm text-gray-500 mb-4")
            span(class="flex items-center")
              i(class="fas fa-users mr-1")
              span 32 students
            span(class="flex items-center")
              i(class="fas fa-clock mr-1")
              span 10 weeks
          div(class="flex items-center justify-between")
            span(class="text-lg font-bold text-indigo-600") $149
            div(class="flex space-x-2")
              button(class="px-3 py-1 text-indigo-600 hover:text-indigo-900 text-sm") Edit
              button(class="px-3 py-1 text-red-600 hover:text-red-900 text-sm") Delete

      //- Course Card 3
      div(class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow")
        img(src="https://images.unsplash.com/photo-1551650975-87deedd944c3?w=400&h=200&fit=crop" alt="Course" class="w-full h-48 object-cover")
        div(class="p-6")
          div(class="flex items-center justify-between mb-2")
            h3(class="text-lg font-semibold text-gray-900") Node.js Backend
            span(class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800") Draft
          p(class="text-gray-600 text-sm mb-4") Build scalable backend applications with Node.js
          div(class="flex items-center justify-between text-sm text-gray-500 mb-4")
            span(class="flex items-center")
              i(class="fas fa-users mr-1")
              span 0 students
            span(class="flex items-center")
              i(class="fas fa-clock mr-1")
              span 12 weeks
          div(class="flex items-center justify-between")
            span(class="text-lg font-bold text-indigo-600") $199
            div(class="flex space-x-2")
              button(class="px-3 py-1 text-indigo-600 hover:text-indigo-900 text-sm") Edit
              button(class="px-3 py-1 text-red-600 hover:text-red-900 text-sm") Delete

